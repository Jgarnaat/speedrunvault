{{#each blogs as |blog|}}
<div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            {{#if logged_in}}
            <!-- Dashboard and Logout links -->
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <button class="no-button" id="logout">Logout</button>
            </li>
            {{else}}
            <!-- Login and Sign Up links for non-logged-in users -->
            <li>
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/signUp">Sign Up</a>
            </li>
            {{/if}}
          </ul>
        </div>
  <div class="row">
    <div class="container blogBox">
      <div class="row justify-content-center headerRow">
        <div class="col-8">
          <h2>
            <a class="blogTitle text-uppercase" href="/blog/{{blog.id}}">{{blog.title}}</a>
          </h2>
        </div>
        <div class="col-4">
          <p class="blogCreate text-right">
            Created by {{blog.user.username}} on {{format_date blog.date_created}}
          </p>
        </div>
      </div>
      <div class="blogDesc">
        <p class="text-center blogDescMain">
          {{blog.description}}
        </p>
      </div>
    </div>
  </div>
{{/each}}
